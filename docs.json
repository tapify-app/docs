    "heading": {
      "family": "Geist",
      "weights": {
        "regular": {
          "weight": 400,
          "source": "https://api.tapify.app/storage/v1/object/public/font//Geist-Regular.woff2"
        },
        "semibold": {
          "weight": 600,
          "source": "https://api.tapify.app/storage/v1/object/public/font//Geist-SemiBold.woff2"
        },
        "bold": {
          "weight": 700,
          "source": "https://api.tapify.app/storage/v1/object/public/font//Geist-Bold.woff2"
        }
      },
      "format": "woff2"
    },
    "body": {
      "family": "Geist",
      "weights": {
        "regular": {
          "weight": 400,
          "source": "https://api.tapify.app/storage/v1/object/public/font//Geist-Regular.woff2"
        },
        "medium": {
          "weight": 500,
          "source": "https://api.tapify.app/storage/v1/object/public/font//Geist-Medium.woff2"
        },
        "semibold": {
          "weight": 600,
          "source": "https://api.tapify.app/storage/v1/object/public/font//Geist-SemiBold.woff2"
