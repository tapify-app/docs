{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "willow",
  "name": "Mint Starter Kit",
  "colors": {
    "primary": "#171717",
    "light": "#fafafa",
    "dark": "#c91685"
  },
  "favicon": "logo/favicon.ico",
  "navigation": {
    "dropdowns": [
      {
        "dropdown": "Teams",
        "icon": "people-group",
        "groups": [
          {
            "group": "Get Started",
            "pages": [
              "introduction",
              "quickstart",
              "development"
            ]
          },
          {
            "group": "Essentials",
            "pages": [
              "essentials/markdown",
              "essentials/code",
              "essentials/images",
              "essentials/settings",
              "essentials/navigation",
              "essentials/reusable-snippets"
            ]
          }
        ]
      },
      {
        "dropdown": "Individual",
        "icon": "square-terminal",
        "groups": [
          {
            "group": "API Documentation",
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "group": "Endpoint Examples",
            "pages": [
              "api-reference/endpoint/get",
              "api-reference/endpoint/create",
              "api-reference/endpoint/delete",
              "api-reference/endpoint/webhook"
            ]
          }
        ]
      }
    ]
  },
  "logo": {
    "light": "/logo/wordmark-light.svg",
    "dark": "/logo/wordmark-dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Contact support",
        "href": "mailto:support@tapify.app"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Log in",
      "href": "https://tapify.app"
    }
  },
  "footer": {
    "socials": {
      "linkedin": "https://linkedin.com/company/tapifyapp",
      "x": "https://x.com/tapifyapp"
    }
  },
  "fonts": {
    "heading": {
      "family": "Geist",
      "weights": {
        "regular": {
          "weight": 400,
          "source": "https://api.tapify.app/storage/v1/object/public/font//Geist-Regular.woff2"
        },
        "semibold": {
          "weight": 600,
          "source": "https://api.tapify.app/storage/v1/object/public/font//Geist-SemiBold.woff2"
        },
        "bold": {
          "weight": 700,
          "source": "https://api.tapify.app/storage/v1/object/public/font//Geist-Bold.woff2"
        }
      },
      "format": "woff2"
    },
    "body": {
      "family": "Geist",
      "weights": {
        "regular": {
          "weight": 400,
          "source": "https://api.tapify.app/storage/v1/object/public/font//Geist-Regular.woff2"
        },
        "medium": {
          "weight": 500,
          "source": "https://api.tapify.app/storage/v1/object/public/font//Geist-Medium.woff2"
        },
        "semibold": {
          "weight": 600,
          "source": "https://api.tapify.app/storage/v1/object/public/font//Geist-SemiBold.woff2"
        }
      },
      "format": "woff2"
    }
  }
}