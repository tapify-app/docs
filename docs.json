{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "maple",
  "name": "Tapify",
  "colors": {
    "primary": "#171717",
    "light": "#145ff4",
    "dark": "#fafafa"
  },
  "favicon": "favicon.svg",
