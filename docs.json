              { "group": "Advanced",
              "pages": ["workspace/settings/advanced/domain",
              "workspace/settings/advanced/scim",
              "workspace/settings/advanced/sso"]
              },
              "workspace/settings/billing"
            ]
          },
          {
            "group": "Tapify Card",
            "pages": [
              "workspace/card/design",
              "workspace/card/order",
              "workspace/card/assign"
